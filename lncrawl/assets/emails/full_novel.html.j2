{% extends "layout.html.j2" %}

{% block head %}
<title>Novel: {{ novel_title }}</title>
{% endblock %}

{% block content %}
<div style="
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 0.6rem;
    padding: 2rem;
    max-width: 450px;
    letter-spacing: 0.02rem;
">
    <div style="
        font-size: 1.5rem;
        font-weight: 600;
        color: #222;
    ">
        {{ novel_title }}
    </div>
    <div style="
        color: #666;
        font-size: 0.925rem;
    ">
        <b>Author(s):</b> {{ novel_authors }} <br />
        <b>Chapters:</b> {{ chapter_count }} | <b>Volumes:</b> {{ volume_count }}
    </div>

    {% if novel_synopsis %}
    <hr style="width: 100%; opacity: 0.3;" />
    <div style="
        color: #888;
        font-size: 0.825rem;
        display: -webkit-box;
        -webkit-line-clamp: 6;
        -webkit-box-orient: vertical;
        text-overflow: ellipsis;
        overflow: hidden;
    ">
        {{ novel_synopsis }}
    </div>
    {% endif %}

    {% if artifacts %}
    <hr style="width: 100%; opacity: 0.3;" />
    <b style="
        color: #666;
        font-size: 0.925rem;
    ">
        Artifacts
    </b>
    <table width="100%" cellpadding="5px" cellspacing="5px" style="
        background: #f7fafc;
        border-radius: 0.5rem;
        padding: 5px;
        border: none;
    ">
        {% for artifact in artifacts %}
        <tr>
            <th align="right" style="
                color: #336;
                font-size: 1rem;
                font-family: monospace;
                white-space: nowrap;
                min-width: 50px;
                vertical-align: top;
            ">
                {{ artifact.format }}
            </th>
            <td width="100%">
                <a href="{{ artifact.url }}" target="_blank">
                    {{ artifact.name }}
                </a>
            </td>
            <td style="
                color: #666;
                white-space: nowrap;
                font-size: 0.825rem;
                font-family: monospace;
                text-align: right;
                vertical-align: top;
            ">
                {{ artifact.size }}
            </td>
        </tr>
        {% endfor %}
    </table>
    {% endif %}

    <hr style="width: 100%; opacity: 0.3;" />
    <a href="{{ job_url }}" target="_blank" style="
        display: block;
        padding: 1rem 2rem;
        border-radius: 8px;
        background: #276ef1;
        align-self: center;
        color: #fff;
        font-weight: 500;
        text-decoration: none;
    ">
        View Job Details
    </a>
</div>
{% endblock %}