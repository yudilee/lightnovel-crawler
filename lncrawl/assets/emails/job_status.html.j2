{% extends "layout.html.j2" %}

{% block head %}
<title>{{ title }}</title>
<style>
  main {
    padding: 2rem;
    max-width: 450px;
    letter-spacing: 0.02rem;
    align-items: flex-start;
  }

  .title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #222;
  }

  .subtitle {
    color: #666;
    font-size: 0.925rem;
  }

  .error {
    align-self: normal;
    display: block;
    padding: 0.8rem 1.2rem;
    background: #fcefe7;
    border-radius: 0.5rem;
    box-shadow: inset 0 0 5px rgb(0, 0, 0, 0.05);

    color: #966;
    white-space: wrap;
    font-size: 0.825rem;
    font-family: monospace;
  }

  .button {
    display: block;
    padding: 1rem 2rem;
    border-radius: 8px;
    background: #276ef1;
    align-self: center;

    color: #fff;
    font-weight: 500;
    text-decoration: none;
  }
</style>
{% endblock %}

{% block body %}
<main>
  <div class="title">
    {{ title }}
  </div>

  <div class="subtitle">
    <b>Type: </b>{{ job_type }}
    <br /><b>Created: </b> {{ created_at }}
    {% if started_at %}
    <br /><b>Started: </b> {{ started_at }}
    {% endif %}
    {% if finished_at and not is_running %}
    <br /><b>Finished: </b> {{ finished_at }}
    {% endif %}
  </div>

  {% if is_failed or is_canceled %}
  <hr />
  <div class="error">
    {{ failure or 'No cause available' }}
  </div>
  {% endif %}

  <hr />
  <a href="{{ job_url }}" target="_blank" class="button">
    View Job Details
  </a>
</main>
{% endblock %}
